<Window x:Class="OperaBookMarkExporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OperaBookMarkExporter" Height="350" Width="525">
	<Grid>
		<TextBox x:Name="SourcePath" HorizontalAlignment="Right" Height="24" Margin="0,29,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
		<Button x:Name="ExportButton" Content="export" HorizontalAlignment="Left" Height="51" Margin="380,116,0,0" VerticalAlignment="Top" Width="106" Click="Button_Click" FontSize="16"/>
		<TextBox x:Name="log" HorizontalAlignment="Left" Height="194" Margin="10,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
		<TextBlock x:Name="SourcePathName" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Text="OperaBookmarkPath"/>
		<TextBox x:Name="DestPath" HorizontalAlignment="Right" Height="24" Margin="0,78,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
		<TextBlock x:Name="DestPathName" HorizontalAlignment="Left" Height="20" Margin="10,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Text="OperaBookmarkPath"/>

	</Grid>
</Window>
